<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.chinesecuisine.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:hint="Customer Name "/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deliver Required ($5 deliver fee)"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/editText"
            android:hint="Quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tax Percentage"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText3"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Tip Percentage" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_margin="13dp"/>

       <ScrollView
           android:layout_width="300dp"
           android:layout_height="200dp"
           android:layout_gravity="center">

           <ImageView
               android:layout_width="200dp"
               android:layout_height="180dp"
               android:layout_gravity="center"
               android:src="@drawable/meal" />

           <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Orange Chicken" />

           <!--<ImageView-->
               <!--android:layout_width="200dp"-->
               <!--android:layout_height="180dp"-->
               <!--android:layout_gravity="center"-->
               <!--android:src="@drawable/chi" />-->

           <!--<CheckBox-->
               <!--android:layout_width="wrap_content"-->
               <!--android:layout_height="wrap_content"-->
               <!--android:text="Chicken Teriyaki" />-->

        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
